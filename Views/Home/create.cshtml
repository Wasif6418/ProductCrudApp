@model ProductCrudApp.Models.Product

<h1>Add Product</h1>

<form asp-action="Create" method="post">
    <label>Name:</label>
    <input type="text" asp-for="Name" required /><br/>
    <label>Price:</label>
    <input type="number" step="0.01" asp-for="Price" required /><br/>
    <button type="submit">Save</button>
</form>

